{
  "version": 5,
  
  "vendor": {
    "microsoft.com/VisualStudioSettings/CMake/1.0": {
      "hostOS": ["Windows"],
      "environment": [
        { "type": "vsdevcmd", "arguments": ["-arch=x64", "-host_arch=x64"] }
      ]
    }
  },

  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 21,
    "patch": 0
  },

  "configurePresets": [
    {
      "name": "ninja-debug",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/ninja-debug",
      "toolchainFile": "${sourceDir}/cmake/toolchain/vcpkg_autodetect.cmake",
      "cacheVariables": {
        "BUILD_FLAVOR": "ninja-debug",
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "YES",
        "VCPKG_INSTALL_OPTIONS": "--x-abi-tools-use-exact-versions"
      }
    },
    {
      "name": "ninja-release",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/ninja-release",
      "toolchainFile": "${sourceDir}/cmake/toolchain/vcpkg_autodetect.cmake",
      "cacheVariables": {
        "BUILD_FLAVOR": "ninja-release",
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "YES",
        "VCPKG_INSTALL_OPTIONS": "--x-abi-tools-use-exact-versions"
      }
    },
    {
      "name": "ninja-release-debug-info",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/ninja-release-debug-info",
      "toolchainFile": "${sourceDir}/cmake/toolchain/vcpkg_autodetect.cmake",
      "cacheVariables": {
        "BUILD_FLAVOR": "ninja-release-debug-info",
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "YES",
        "VCPKG_INSTALL_OPTIONS": "--x-abi-tools-use-exact-versions"
      }
    },
    {
      "name": "ninja-release-win-static",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/ninja-release-win-static",
      "toolchainFile": "${sourceDir}/cmake/toolchain/vcpkg_autodetect.cmake",
      "cacheVariables": {
        "BUILD_FLAVOR": "ninja-release-win-static",
        "CMAKE_BUILD_TYPE": "Release",
        "VCPKG_TARGET_TRIPLET": "x64-windows-static",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "YES",
        "VCPKG_BUILD_STATIC": "ON",
        "VCPKG_INSTALL_OPTIONS": "--x-abi-tools-use-exact-versions"
      }
    },
    {
      "name": "vs2022",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "generator": "Visual Studio 17 2022",
      "binaryDir": "${sourceDir}/build/vs2022",
      "toolchainFile": "${sourceDir}/cmake/toolchain/vcpkg_autodetect.cmake",
      "cacheVariables": {
        "BUILD_FLAVOR": "vs2022",
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/install",
        "CMAKE_CONFIGURATION_TYPES": "Debug;Release",
        "VCPKG_INSTALL_OPTIONS": "--x-abi-tools-use-exact-versions"
      }
    },
    {
      "name": "vs2022-static",
      "hidden": true,
      "generator": "Visual Studio 17 2022",
      "binaryDir": "${sourceDir}/build/vs2022-static",
      "toolchainFile": "${sourceDir}/cmake/toolchain/vcpkg_autodetect.cmake",
      "cacheVariables": {
        "BUILD_FLAVOR": "vs2022-static",
        "VCPKG_TARGET_TRIPLET": "x64-windows-static",
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/install",
        "CMAKE_CONFIGURATION_TYPES": "Debug;Release",
        "VCPKG_INSTALL_OPTIONS": "--x-abi-tools-use-exact-versions"
      }
    },
    {
      "name": "wasm32-debug",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/wasm32-debug",
      "toolchainFile": "${sourceDir}/cmake/toolchain/vcpkg_autodetect.cmake",
      "cacheVariables": {
        "BUILD_FLAVOR": "wasm32-debug",
        "VCPKG_CHAINLOAD_TOOLCHAIN_FILE": "$env{EMSDK}/upstream/emscripten/cmake/Modules/Platform/Emscripten.cmake",
        "VCPKG_OVERLAY_TRIPLETS": "${sourceDir}/triplets",
        "CMAKE_BUILD_TYPE": "Debug",
        "VCPKG_TARGET_TRIPLET": "wasm32-emscripten-multithreaded",
        "VCPKG_CMAKE_CONFIGURE_OPTIONS": "-pthread -matomics -mbulk-memory",
        "CMAKE_SUPPRESS_REGENERATION": "ON",
        "VCPKG_INSTALL_OPTIONS": "--x-abi-tools-use-exact-versions"
      }
    },
    {
      "name": "wasm32-release",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/wasm32-release",
      "toolchainFile": "${sourceDir}/cmake/toolchain/vcpkg_autodetect.cmake",
      "cacheVariables": {
        "BUILD_FLAVOR": "wasm32-release",
        "VCPKG_CHAINLOAD_TOOLCHAIN_FILE": "$env{EMSDK}/upstream/emscripten/cmake/Modules/Platform/Emscripten.cmake",
        "VCPKG_OVERLAY_TRIPLETS": "${sourceDir}/triplets",
        "CMAKE_BUILD_TYPE": "Release",
        "VCPKG_TARGET_TRIPLET": "wasm32-emscripten-multithreaded",
        "VCPKG_CMAKE_CONFIGURE_OPTIONS": "-pthread -matomics -mbulk-memory",
        "CMAKE_SUPPRESS_REGENERATION": "ON",
        "VCPKG_INSTALL_OPTIONS": "--x-abi-tools-use-exact-versions"
      }
    },
    {
      "name": "wasm32-release-debug-info",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/wasm32-release-debug-info",
      "toolchainFile": "${sourceDir}/cmake/toolchain/vcpkg_autodetect.cmake",
      "cacheVariables": {
        "BUILD_FLAVOR": "wasm32-release-debug-info",
        "VCPKG_CHAINLOAD_TOOLCHAIN_FILE": "$env{EMSDK}/upstream/emscripten/cmake/Modules/Platform/Emscripten.cmake",
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "VCPKG_OVERLAY_TRIPLETS": "${sourceDir}/triplets",
        "VCPKG_TARGET_TRIPLET": "wasm32-emscripten-multithreaded",
        "VCPKG_CMAKE_CONFIGURE_OPTIONS": "-pthread -matomics -mbulk-memory",
        "CMAKE_SUPPRESS_REGENERATION": "ON",
        "VCPKG_INSTALL_OPTIONS": "--x-abi-tools-use-exact-versions"
      }
    }
  ],

  "buildPresets": [
    { "name": "ninja-debug",                "configurePreset": "ninja-debug" },
    { "name": "ninja-release",              "configurePreset": "ninja-release" },
    { "name": "ninja-release-win-static",   "configurePreset": "ninja-release-win-static" },
    { "name": "wasm32-debug",               "configurePreset": "wasm32-debug" },
    { "name": "wasm32-release",             "configurePreset": "wasm32-release" },
    { "name": "wasm32-release-debug-info",  "configurePreset": "wasm32-release-debug-info" }
  ]
}
